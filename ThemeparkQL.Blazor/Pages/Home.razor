@page "/"

<UseGetThemeparks Context="result">
    <ChildContent>
        @foreach (var item in result.Themeparks)
        {
            <p>Name: @item.Name</p>
            <p>Location: @item.Location</p>
            <p>Description: @item.Description</p>
            <p>Opening hours: @item.OpeningHours</p>
            <p>Attractions: </p>
            @foreach(var attraction in item.Attractions)
            {
                <ul>@attraction.Name - @attraction.Category - @attraction.Description</ul>
            }
            <img src="@item.ImageUrl" alt="@item.Name" width="200" height="200" />
        }
        
        <br /> <br />
    </ChildContent>
    <ErrorContent>
        Something went wrong... <br />
        @result.First().Message;
    </ErrorContent>
    <LoadingContent>
        Loading...
    </LoadingContent>
</UseGetThemeparks>

<UseGetThemepark Context="result" Id="@Guid.Parse("a15c497a-6217-41c9-86cf-cd2dba67d4b0")">
    <p>@result.Themepark?.Name</p>
    <p>Attractions:</p>
    @foreach (var attraction in result.Themepark?.Attractions)
    {
        <ul>@attraction.Name - @attraction.Category - @attraction.Description</ul>
    }
</UseGetThemepark>